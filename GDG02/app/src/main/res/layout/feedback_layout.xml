<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Trong quá trình phát triển ứng dụng chắc chắn sẽ khó tránh khỏi những sai sót.\nVì thế để có thể phát triển ứng dụng được tốt hơn, chúng tôi rất mong nhận được sự góp ý chân thành từ các bạn.\nMọi phản hồi về sai sót hoặc đóng góp cho ứng dụng, các bạn có thể phản hồi ngay bên dưới.\nXin chân thành cảm ơn!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nội dung góp ý"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:id="@+id/editTextGopy"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Gửi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:id="@+id/buttonGui"
            android:textSize="18dp"
            android:textStyle="bold"
            android:enabled="false"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>